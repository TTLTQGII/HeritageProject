<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="46dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:padding="15dp"
    android:paddingEnd="5dp"
    android:paddingStart="5dp"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:layout_gravity="center"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:elevation="5dp">

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/part_1"
            android:layout_centerHorizontal="true"
            android:text="see also ("
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_amount_of_comment_left"
            android:text="5"
            android:layout_toEndOf="@id/part_1"
            android:layout_toRightOf="@id/part_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text=") comments"
            android:layout_toEndOf="@id/txt_amount_of_comment_left"
            android:layout_toRightOf="@id/txt_amount_of_comment_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.v7.widget.CardView>