<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_margin="4dp"
    android:layout_height="wrap_content" android:layout_width="match_parent"
    android:background="@drawable/custome_border_layout_comment"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txt_comment_user_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Lương Trường Gia Thịnh"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_comment_contents"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:text="ahdjkashkhhsajdhkshkshksahkjsahdjsasahkjsahdkjsahksahksahkjsahkjsahdashdkjsahkjsahdsakjhdakjshdhkjsahdkjsdhd"
        android:layout_below="@+id/txt_comment_user_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_comment_postTime"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="25/5/2018" />
</RelativeLayout>