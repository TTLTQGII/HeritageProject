<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_exhibition"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        card_view:cardCornerRadius="5dp"
        android:elevation="5dp"
        android:background="@drawable/customize_elevation"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        tools:ignore="UnusedAttribute"
        android:layout_marginLeft="2.5dp"
        android:layout_marginStart="2.5dp"
        android:layout_marginRight="2.5dp"
        android:layout_marginEnd="2.5dp">

        <ImageView
            android:src="@color/colorPrimary"
            android:id="@+id/img_recycler_view_exhibition_item"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            >
            <LinearLayout
                android:id="@+id/container_txt_name_exhibition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp">

                <!--location name-->

                <TextView
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_name_location_recycler_view_exhibition_item"
                    android:text=""
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

